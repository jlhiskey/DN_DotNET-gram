@page "{id}"
@model DN_DotNET_gram.Pages.Posts.IndexModel

<div>
    <label asp-for="Post.Name"></label>
    <label asp-for="Post.Name">@Model.Post.Name</label>
</div>
<div>
    <label asp-for="Post.URL"></label>
    <label asp-for="Post.URL">@Model.Post.URL</label>
    <img src="@Model.Post.URL" alt="Post Image" height="150" style="margin:30px" />
</div>
<div>
    <label asp-for="Post.Details"></label>
    <label asp-for="Post.Details">@Model.Post.Details</label>
</div>
<a asp-page="/Posts/Manage" asp-route-id="@Model.Post.ID">Edit Post</a>