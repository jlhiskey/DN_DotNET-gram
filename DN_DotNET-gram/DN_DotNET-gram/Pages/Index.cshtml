@page
@using DN_DotNET_gram.Models.Interfaces
@inject IPostManager PostManagementService
@{
    var posts = await PostManagementService.GetPosts();

}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

<h3><a class="btn bg-light shadow p-3 col text-center" asp-page="/Index"><img src="~/assets/dotnetgramlogo.png" alt="Dot net gram logo" height="100" style="margin-bottom: -2rem; margin-top: -1rem"/></a></h3>

@foreach (var post in posts)
{

    <div class="card bg-light mb-3 shadow p-3 " style="max-width: 40rem; margin: 1rem auto">
        <div class="card-body">
            <h5 class="card-header">@post.Name</h5>

            <img class="card-img shadow p-3" src="@post.URL" alt="@post.Details" style="padding: 1rem">


            <p class="card-text" style="margin-top: 1rem">@post.Details</p>


            <a class="btn btn-dark shadow p-3" asp-page="/Posts/Index" asp-route-id="@post.ID" style="margin-top: 1rem">View Post</a>
        </div>
    </div>

}
<h3 style="position:inherit"><a class="btn btn-dark shadow p-3 col text-center" asp-page="/Posts/Manage">Add New Post</a></h3>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
